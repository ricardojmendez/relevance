{
  "name": "Booklet",
  "version": "0.2",
  "browser_action": {
    "default_title": "Show the popup",
    "scripts": ["booklet.js", "handler.js"],
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs", "storage", "idle", "http://localhost:3000/"
  ],
  "background": {
    "scripts": [
      "booklet.js",
      "background.js",
      "handler.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}

