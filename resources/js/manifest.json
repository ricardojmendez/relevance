{
  "name": "tabler",
  "version": "0.1",
  "browser_action": {
    "default_title": "Show the popup",
    "scripts": ["tabler.js", "handler.js"],
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "tabler.js",
      "background.js",
      "handler.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}

